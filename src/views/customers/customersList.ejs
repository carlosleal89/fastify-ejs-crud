<div class="container-customers-list">
  <% customers.forEach(customer => { %>
      <div class="container-customer">
        <div class="container-name-email">
          <p><%= customer.name %></p>
          <p><%= customer.email %></p>
        </div>
        <div class="container-cpf-phone">
          <p>Cpf: <%= customer.cpf %></p>
          <p>Telefone: <%= customer.phone %></p>
        </div>
        <div class="container-status">
          <p><%= customer.status %></p>
        </div>
          <a href="/customers/edit/<%= customer.id %>" class="button-edit">
            <button class="btn-edit-customer">
              Editar
            </button>
          </a>
      </div>
      <% }); %>
</div>


<form id="delete-form" action="/customers/delete-customer/<%= customer[0].id %>" method="POST" style="display: none;">
  <input type="hidden" name="_method" value="DELETE">
</form>
<!-- form oculto para lidar com a função submit do botão de deletar -->

<form class="container-form" action="/customers/update/<%= customer[0].id %>" method="POST">
  <label for="input-name">Nome: </label>  
  <input type="text" name="input-name" id="input-name" placeholder="Nome" value="<%= customer[0].name %>" >
  <label for="input-email">Email: </label> 
  <input type="email" name="input-name" id="input-email" placeholder="Email" value="<%= customer[0].email %>" >
  <label for="input-cpf">CPF: </label> 
  <input type="text" name="input-name" id="input-cpf" placeholder="CPF" value="<%= customer[0].cpf %>" >
  <label for="input-phone">Telefone: </label> 
  <input type="text" name="input-name" id="input-phone" placeholder="Telefone" value="<%= customer[0].phone %>" >
  <label for="status-select">Status: </label> 
  <select name="status-select" id="status-select">
    <option value="Ativo" <%= customer[0].status === 'Ativo' ? 'selected' : '' %>>Ativo</option>
    <option value="Inativo" <%= customer[0].status === 'Inativo' ? 'selected' : '' %>>Inativo</option>
    <option value="Aguardando Ativação" <%= customer[0].status === 'Aguardando Ativação' ? 'selected' : '' %>>Aguardando Ativação</option>
    <option value="Desativado" <%= customer[0].status === 'Desativado' ? 'selected' : '' %>>Desativado</option>
  </select>
  <div class="container-btn-form">
    <button type="submit" class="btn-transparent">Editar</button>
    <button type="button" id="btn-back" class="btn-transparent">Voltar</button>
    <button type="button" id="btn-delete" >Excluir</button>
  </div>
</form>

<script>
  document.getElementById('btn-back').addEventListener('click', function() {
    window.location.href = '/customers/';
  });

  document.getElementById('btn-delete').addEventListener('click', function() {
    if (confirm('Atenção! O cliente será excluido permanentemente! Deseja continuar?')) {
      document.getElementById('delete-form').submit();
    }
  });
</script>